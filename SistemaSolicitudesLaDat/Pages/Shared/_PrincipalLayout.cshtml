@inherits RazorPage<dynamic>
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Mvc.Razor
@{
    var userName = User.Identity?.Name ?? "Invitado";
    var avatarUrl = "/images/avatar_generico.jpg";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] Sistema de Solicitudes LaDat</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            overflow-x: hidden;
        }

        .sidebar {
            min-height: 100vh;
        }

        .topbar {
            height: 60px;
            background-color: #343a40;
            color: white;
            padding: 0 1rem;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 bg-dark sidebar text-white p-3">
                <div class="mb-3 d-flex justify-content-center">
                    <img src="/images/logo1.png" alt="Icono" style="width: 70px; height: 70px;" class="me-2" />
                </div>
                <div class="mb-3 d-flex justify-content-center">
                    <h4>Solicitudes LaDat</h4>
                </div>
                <div class="w-80 mx-auto" style="height: 3px; background-color: #e6e6e6; margin-bottom: 5px"></div>
                <ul class="nav flex-column">
                    <li class="nav-item"><a class="nav-link text-white" href="/Principal">Principal</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/About">Acerca de</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/Contact">Contacto</a></li>
                    <li class="nav-item">
                        <form method="post" asp-page="/CerrarSesion" class="d-inline">
                            <button type="submit" class="btn btn-outline-light mt-2 w-100 text-start">Cerrar sesión</button>
                        </form>
                    </li>
                </ul>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                <!-- Topbar -->
                <div class="topbar d-flex justify-content-end align-items-center mb-3">
                    <span class="me-2">@userName</span>
                    <img src="@avatarUrl" alt="Avatar" class="rounded-circle" style="width: 40px; height: 40px;" />
                </div>

                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
